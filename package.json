{
  "name": "shortcut-launcher",
  "version": "1.0.0",
  "description": "Fullscreen shortcut launcher with software detection - Black & White Theme",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/shortcut-launcher.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "publish": "electron-builder --publish always",
    "publish:win": "electron-builder --win --publish always",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "shortcuts",
    "launcher",
    "fullscreen",
    "black-white"
  ],
  "author": "Shortcut Launcher Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "fs-extra": "^11.2.0",
    "mysql2": "^3.6.5",
    "peerjs": "^1.5.2"
  },
  "optionalDependencies": {
    "sharp": "^0.33.0"
  },
  "build": {
    "appId": "com.shortcutlauncher.app",
    "productName": "Shortcut Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "preload.js",
      "node_modules/**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,readme.md,changelog.md}",
      "!node_modules/**/test",
      "!node_modules/**/tests"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_USERNAME",
        "repo": "shortcut-launcher"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Shortcut Launcher Team",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Shortcut Launcher"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
